<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#dbFF33">
    <RelativeLayout 
       android:layout_width="fill_parent"
		android:layout_height="45dp"
		android:background="#2ee4d5"
       
       >


       
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="高级匹配"
           android:textSize="20sp"
           android:layout_centerVertical="true"
           
           />
   </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/tv_terms"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="学期:"	
		android:textSize="20sp"
		
		android:layout_gravity="center_vertical"
            />
        
        <Spinner 
            android:id="@+id/spi_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
        >
        <TextView 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="性别:"	
		android:textSize="20sp"
		
		android:layout_gravity="center_vertical"
            />
        <Spinner 
            android:id="@+id/spi_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            
            />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
        >
        <TextView 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="班级:"	
		android:textSize="20sp"
		
		android:layout_gravity="center_vertical"
            />
        <Spinner 
            android:id="@+id/spi_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            
            />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
        >
        <TextView 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="选择科目:"	
		android:textSize="20sp"
		
		android:layout_gravity="center_vertical"
            />
        <Spinner 
            android:id="@+id/spi_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            
            />
        
        
    </LinearLayout>
    <EditText 
        android:id="@+id/edt_findbysocre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="特定分数"
        
        android:inputType="number"
        />
   
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
     
    <TextView 
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名:"
        android:textSize="20sp"
        
       
        android:layout_gravity="center_vertical"
        
        />
    
    <EditText 
        android:id="@+id/edt_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        
        android:hint="可模糊匹配"
       android:singleLine="true"
        
        android:labelFor="@+id/edt_minscore"
        android:layout_gravity="center_vertical"
        />
    

	</LinearLayout>
    
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
     
    <TextView 
        android:id="@+id/tv_preiodscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分数段:"
        android:textSize="20sp"
        
       
        android:layout_gravity="center_vertical"
        
        />
    
    <EditText 
        android:id="@+id/edt_minscore"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="#ffffff"
        
        android:hint="0"
        android:inputType="number"
        android:labelFor="@+id/edt_minscore"
        android:layout_gravity="center_vertical"
        />
    <EditText 
        android:id="@+id/edt_maxscore"
        android:layout_width="50dp"
        android:layout_height="20dp"
        
        android:layout_marginLeft = "30dp"
        android:background="#ffffff"
        android:hint="100"
        android:inputType="number"
        android:labelFor="@+id/edt_maxscore"
        android:layout_gravity="center_vertical"
        />
    

	</LinearLayout>
	
	<LinearLayout 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/tv_howtorank"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="排列:"	
		android:textSize="20sp"
		
		android:layout_gravity="center_vertical"
            />
        <Spinner 
            android:id="@+id/spi_howtorank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            
            />
        
    </LinearLayout>
    
	<Button
        
        android:id="@+id/btn_displayresult"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		
		android:text="查询"
		android:background="@drawable/button"
		
        />
